<section class="d-flex">
  <div class="container ">

    <div class="col-md-5 mx-auto">
      <div class="text-center fs-1" style="ba">Eit Product</div>


      <form action="/admin/edit-product/{{product._id}}" method="post" enctype="multipart/form-data">
        <label for="">Name</label>
        <input type="text" name="NAME" class="form-control" value="{{product.NAME}}">

        <div class="mt-2  ">
          <label for="">Discription</label>
          <input type="text" name="DISCRIPTION" class="form-control" value="{{product.DISCRIPTION}}">
        </div>

        <div class="row">

          <div class="mt-2  ">
            <label for="">Category Name</label>
            <select name="categoryName" class="summary-delivery-selection">
              <option value="{{product.categoryName}}" selected="selected">{{product.categoryName}}</option>
              {{#each categories}}
              <option value="{{this.categoryName}}">{{this.categoryName}}</option>
              {{/each}}

            </select>


          </div>
          <div class=" mt-2 ">
            <label for="">SubCategory Name</label>
            <select name="subCategoryName" class="summary-delivery-selection">
              <option value="{{product.categoryName}}" selected="selected">{{product.subCategoryName}}</option>
              {{#each subCategories}}
              <option value="{{this.subCategoryName}}">{{this.subCategoryName}}</option>
              {{/each}}

            </select>

          </div>
          <div class="mt-2  ">
            <label for="">Brand</label>
            <select name="brand" class="summary-delivery-selection">
              <option value="{{product.brand}}" selected="selected">{{product.brand}}</option>
              {{#each brand}}
              <option value="{{this.brand}}">{{this.brand}}</option>
              {{/each}}

            </select>

          </div>
        </div>

        <div class="row ">
          <div class="mt-2  ">
            <label for="">MRP Price</label>
            <input type="number" name="MRP" class="form-control " value="{{product.MRP}}">


          </div>
          <div class="mt-2  ">
            <label for="">Selling Price</label>
            <input type="number" name="OfferPrice" class="form-control " value="{{product.OfferPrice}}">


          </div>

          <div class="mt-2">

            <label for="">Stock</label>
            <input type="number" name="Stock" class="form-control" value="{{product.Stock}}">

          </div>
        </div>

        <label class="mt-2" for="">Image</label>
        <img src="/product-images/{{product.Images.[0]}}" style="width: 100px; ;" alt="">
        <img src="/product-images/{{product.Images.[1]}}" style="width: 100px; ;" alt="">
        <img src="/product-images/{{product.Images.[2]}}" style="width: 100px; ;" alt="">
        <img src="/product-images/{{product.Images.[3]}}" style="width: 100px; ;" alt="">
        <input type="file" value="src=" /product-images/{{product.Images.[3]}}"" name="Images" class="form-control"
          multiple required>

        <button type="submit" class="btn btn-success mt-3 ">Submit</button>
      </form>
    </div>



    <script defer src="https://cdn.crop.guide/loader/l.js?c=LFVHFR"></script>
  </div>


</section>