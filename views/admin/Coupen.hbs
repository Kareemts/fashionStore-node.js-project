<section>
  <div class="container-fluid md-5" >
    <div class="d-flex justify-content-end" >

      <a href="/admin/add-coupen" class="btn btn-secondary"> Add new Coupens</a>
    </div>
    <h3>Coupens</h3>
    <table class="table mt-4" id="dataTabile">
      <thead style="background-color: rgba(145, 140, 140, 0.27);"  >
        <tr>
          <th scope="col">NO</th>
          <th scope="col">COUPEN CODE</th>
          <th scope="col">DISCOUNT %</th>
           <th scope="col">EXPAIRY DATE</th>
          {{!-- <th scope="col">DELETE</th> --}}
        </tr>
      </thead>
      <tbody>
        {{#each coupen}}
        <tr style="background-color: #FFF9F9;">
          <td>{{inc @index}}</td>
          <td >{{this.coupenName}}</td>
           <td >{{this.discount}}</td>
            <td >{{this.expairyDate}}</td>
          {{!-- <td><button class="btn btn-danger" onclick="deletesp('{{this._id}}')">Delete </button></td> --}}
        </tr>
        {{/each}}


      </tbody>
    </table>
  </div>
</section>
