<section class="d-flex">

    <div class="col-md-4 m-auto">
    <div class="container mt-5 pl-5">

        <div class="text-center fs-3">Admin Login</div>


        <form action="/admin/submit" method="post">
            {{#if adminerror}}
            <p class="error" style="color: red;">Invalid Email or Password</p>
            {{/if}}
            <div class="form-group">

                <label class="mt-3 fs-5" for="">Email Address</label>
                <input type="email" name="Email" class="form-control">
            </div>
            <div class="form-group mt-5 fs-5">
                <label style="margin: top 30px;" for="">Password</label>
                <input type="password" name="Password" class="form-control">

            </div>

            <button type="submit" class="btn btn-Dark    mt-3 float-right">
                Login

            </button>



        </form>
    </div>

    </div>


    </div>
</section>
