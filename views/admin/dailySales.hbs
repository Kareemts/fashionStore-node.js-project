<section>
    <div class="container-fluid md-5">
        <div class="d-flex justify-content-center mb-4">
            <h6 class="text-dark font-weight-bold">Daily sales</h6>
        </div>
        <div style="overflow-x:auto;">
            <table class="table mt-4" id="dataTabile">
                <thead style="background-color: rgba(145, 140, 140, 0.27);">
                    <tr>
                        <th scope="col">NO</th>
                        <th scope="col">Date</th>
                        <th scope="col">User name</th>
                        <th scope="col">Order id</th>
                        <th scope="col">Payment method</th>
                        <th scope="col">MRP Total</th>
                        <th scope="col">Total</th>

                    </tr>
                </thead>
                <tbody>
                    {{#each day}}
                    <tr style="background-color: #FFF9F9;">
                        <td>{{inc @index}}</td>
                        <td>{{this.date1}}</td>
                        <td>{{this.Name}}</td>
                         <td>{{this._id}}</td>
                        <td>{{this.PaymentMethod}}</td>
                        <td>₹{{this.beforeDiscount}}</td>
                        <td>₹{{this.totalPayabile}}</td>
                       
                    </tr>
                    {{/each}}


                </tbody>
            </table>
        </div>
    </div>
</section>

<script>
    $(document).ready(function () {
        $('#dataTabile').DataTable({
            stateSave: true,
            "bDestroy": true,
            dom: 'Bfrtip',
            buttons: [
                {
                    extend: 'pdfHtml5',
                    download: 'open'
                }
            ]
        });
    });
</script>