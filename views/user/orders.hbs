<section>
  <h3 class="d-flex justify-content-around">ORDERS</h3>
  {{#each orders}}
  <div class="container">


    <div class="card shadow-0 border mb-4">
      <div class="card-body">
        <div class="row">
          <div class="col-md-1 text-center d-flex justify-content-start align-items-center">
            <p class="text-muted mb-0">No :</p>
            <p class="text-muted mb-0">{{inc @index}}</p>
          </div>
          <div class="col-md-2 text-center d-flex justify-content-center align-items-center">
            <p class="text-dark mb-0">Date:</p>
            <p class="text-muted mb-0">{{this.date1}}</p>
          </div>
          <div class="col-md-2 text-center d-flex justify-content-center align-items-center">
            <p class="text-dark mb-0">Address:</p>
            <p class="text-muted mb-0 small">{{this.deliveryDetails.Address}}</p>
          </div>
          <div class="col-md-2 text-center d-flex justify-content-center align-items-center">
            <p class="text-dark mb-0">Mobile:</p>
            <p class="text-muted mb-0 small">{{this.deliveryDetails.Number}}</p>
          </div>
          <div class="col-md-2 text-center d-flex justify-content-center align-items-center">
            <p class="text-dark mb-0 ">Total:</p>
            <p class="text-muted mb-0 small">₹{{this.totalPrice}}.00</p>
          </div>
          <div class="col-md-1 text-center d-flex justify-content-center align-items-center">
            <p class="text-dark mb-0 "></p>
            <p class="text-muted mb-0 small">{{this.status}}</p>
          </div>
          <div class="col-md-2 mt-4 text-center d-flex justify-content-center align-items-center">
            <a style="margin-right: 5;" href="/view-order-products/{{this._id}}"><i
                class="fi fi-rr-eye text-dark fs-6"></i></a>
            {{#if_Neq this.status "Order returnd" }}
            {{#if action}}
            <a href="/cancel-order/{{this._id}}" onclick="aa()"><i class="fi fi-rr-cross pl-4 text-danger"></i></a>
            {{else}}
            <a><i class="fi fi-rr-ban pl-4"></i></a>
            {{/if}}
            {{/if_Neq}}
          </div>
        </div>
      </div>
    </div>
  </div>
  {{/each}}

  <div class="d-flex justify-content-end">
    <div class="mb-3">
      <div class="pagination:container">
        <div class="pagination:number arrow text-white">
          <svg width="18" height="18">
            <use xlink:href="#left" />
          </svg>
          <span class="arrow:text text-white">Previous</span>
        </div>
        {{#each orders.pageNos}}
        <div class="pagination:number">
          {{!-- <li {{#if this.currentPage}} class="active" {{else}} {{/if}}><a
              href="/productsVeiwSubCata/?subcata={{../orders.subCata}}&pageno={{this.pageno}}">{{this.pageno}}</a></li>
          --}}
          <a href="/orders/{{this.pageno}}" style="color: white;">{{this.pageno}}</a>

        </div>
        {{/each}}
        {{!-- <div class="pagination:number">
          <a href="#" style="color: white;">2</a>
        </div>

        <div class="pagination:number pagination:active">
          <a href="#" style="color: white;">3</a>
        </div>

        <div class="pagination:number">
          <a href="#" style="color: white;">4</a>
        </div> --}}

        <div class="pagination:number arrow text-white">
          <svg width="18" height="18">
            <use xlink:href="#right" />
          </svg>
        </div>
      </div>

      <svg class="hide">
        <symbol id="left" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
        </symbol>
        <symbol id="right" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7">
          </path>
        </symbol>
      </svg>
    </div>
  </div>

</section>


